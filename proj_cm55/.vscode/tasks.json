{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "process",
            "command": "bash",
            "args": [
                "--norc",
                "-c",
                "make -j4 build_proj"
            ],

            "windows" : {
                "command": "${config:modustoolbox.toolsPath}/modus-shell/bin/bash.exe",
                "args": [
                    "--norc",
                    "-c",
                    "export PATH=/bin:/usr/bin:$PATH ; ${config:modustoolbox.toolsPath}/modus-shell/bin/make.exe -j4 build_proj"
                ]
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "process",
            "command": "bash",
            "args": [
                "--norc",
                "-c",
                "make clean_proj"
            ],

            "windows" : {
                "command": "${config:modustoolbox.toolsPath}/modus-shell/bin/bash.exe",
                "args": [
                    "--norc",
                    "-c",
                    "export PATH=/bin:/usr/bin:$PATH ; ${config:modustoolbox.toolsPath}/modus-shell/bin/make.exe clean_proj"
                ]
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Rebuild",
            "dependsOrder": "sequence",
            "dependsOn" : [ "Clean", "Build" ],
            "group": {
                "kind": "build"
            }
        },
        {
            "hide": true,
            "label": "Build Application",
            "type": "process",
            "command": "bash",
            "args": [
                "--norc",
                "-c",
                "make -j4 build"
            ],

            "windows" : {
                "command": "${config:modustoolbox.toolsPath}/modus-shell/bin/bash.exe",
                "args": [
                    "--norc",
                    "-c",
                    "export PATH=/bin:/usr/bin:$PATH ; ${config:modustoolbox.toolsPath}/modus-shell/bin/make.exe -j4 build"
                ]
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Program",
            "type": "process",
            "command": "bash",
            "args": [
                "--norc",
                "-c",
                "make -j4 program_proj"
            ],

            "windows" : {
                "command": "${config:modustoolbox.toolsPath}/modus-shell/bin/bash.exe",
                "args": [
                    "--norc",
                    "-c",
                    "export PATH=/bin:/usr/bin:$PATH ; ${config:modustoolbox.toolsPath}/modus-shell/bin/make.exe -j4 program_proj"
                ]
            },
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build"
            }
        }
    ]
}
